<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item>
    <shape android:shape="rectangle" >
        <gradient
            android:angle="0"
            android:startColor="@color/unknown"
            />

        <padding
            android:bottom="10dp"
            android:left="10dp"
            android:right="10dp"
            android:top="10dp" />

        <corners android:radius="20dp" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle" >
        <padding
            android:bottom="5dp"
            android:left="5dp"
            android:right="5dp"
            android:top="5dp" />

        <solid android:color="#ff252525" />
        <corners android:radius="20dp" />

    </shape>
</item>
</layer-list>