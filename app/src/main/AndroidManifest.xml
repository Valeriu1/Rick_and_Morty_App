<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.valeriu.rickandmortyhope">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_rickandmorty"
        android:label="@string/app_name"
        android:windowSoftInputMode="adjustPan"
        android:roundIcon="@mipmap/ic_rickandmorty_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RickAndMorty">
        <activity
            android:name="com.valeriu.rickandmortyhope.Main"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>